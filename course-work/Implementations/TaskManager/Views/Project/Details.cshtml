@model TaskManager.Models.Project

@{
    ViewData["Title"] = "Детайли за проект";
}

<h1>Детайли</h1>

<div>
    <h4>Проект</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Име</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Начало</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Край</dt>
        <dd class="col-sm-10">@(Model.EndDate.HasValue? Model.EndDate.Value.ToShortDateString() : "")</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a> |
    <a asp-action="Index">Обратно към списъка</a>
</div>
